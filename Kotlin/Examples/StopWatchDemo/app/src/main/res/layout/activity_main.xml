<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:text="@string/time"
        style="@style/Chronometer"
        app:layout_constraintBottom_toTopOf="@+id/iv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.952" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/image_round_outside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_time"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:src="@drawable/image_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/image_round_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="@string/start"
        android:background="@drawable/circle_button"
        android:stateListAnimator="@null"
        android:visibility="visible"
        style="@style/Button"
        app:layout_constraintBottom_toBottomOf="@+id/iv_time"
        app:layout_constraintEnd_toEndOf="@+id/iv_time"
        app:layout_constraintStart_toStartOf="@+id/iv_time"
        app:layout_constraintTop_toTopOf="@+id/iv_time" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_stop"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="@string/finish"
        android:background="@drawable/circle_button"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        style="@style/Button"
        app:layout_constraintBottom_toBottomOf="@+id/iv_time"
        app:layout_constraintEnd_toEndOf="@+id/iv_time"
        app:layout_constraintStart_toStartOf="@+id/iv_time"
        app:layout_constraintTop_toTopOf="@+id/iv_time" />

</androidx.constraintlayout.widget.ConstraintLayout>
